{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react-native", // Lägg till detta för att stödja JSX i React Native
    "skipLibCheck": true // (Valfritt) För att undvika problem med typkontroll i externa bibliotek
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx",
    "server/**/*.ts",
    "database/**/*.ts"
  ],
  "exclude": ["node_modules"]
}